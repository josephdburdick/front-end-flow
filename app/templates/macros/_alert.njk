{% macro alert(class="success", text="<strong>Well done!</strong> You successfully read this important alert message.", close) %}
  <div class="alert alert-{{ class }}" role="alert">
    {% if close %}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    {% endif %}
    {{ text | safe }}
  </div>
{% endmacro %}
